<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Replier | Replies</title>
    <%- include('../partials/head'); %>
    <style>
      .ratingStar {
        color: gold;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/auth_loader'); %>
    <div class="wrapper">
      <%- include('../partials/sidebar'); %>

      <!-- End Navbar -->
      <div class="main-panel">
        <%- include('../partials/nav'); %>
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                  <div class="card-header">
                    <h4 class="card-title">All Replies</h4>
                    <p class="card-category">Here is a list of all Replies</p>
                    <!-- <a
                      href="/products/add"
                      class="btn btn-primary float-right"
                      >Add</a
                    > -->
                  </div>
                  <div class="card-body table-full-width table-responsive">
                    <table class="table table-hover table-striped">
                      <thead>
                        <th>Stars</th>
                        <th>Text</th>
                        <th>Keywords</th>
                        <th>Languages</th>
                        <th>Apps</th>
                        <th>Edit</th>
                      </thead>
                      <tbody>
                        <% replies.forEach(reply => { %>
                        <tr>
                          <td>
                            <% reply.supportedStars.split('|').map((ele)=>{ %>
                            <% if(ele == 1) {%>

                            <i class="fa fa-star ratingStar"></i>
                            <br />
                            <% } %> <% if(ele == 2) {%>

                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <br />

                            <% } %> <% if(ele == 3) {%>

                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <br />

                            <% } %> <% if(ele == 4) {%>

                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <br />

                            <% } %> <% if(ele == 5) {%>

                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <i class="fa fa-star ratingStar"></i>
                            <br />

                            <% } %> <% }) %>
                          </td>
                          <td><%= reply.replyByLanguage[0].reply %></td>
                          <td><%= reply.replyByLanguage[0].keyWords %></td>
                          <td>
                            <% reply.replyByLanguage.forEach((lang)=>{ %> <%=
                            lang.lang %> <% }) %>
                          </td>
                          <td>
                            <% reply.supportedApps.forEach((app)=>{ %>

                            <img
                              src="<%= app.iconUrl %>"
                              height="20px"
                              width="20px"
                            />
                            <% }) %>
                          </td>
                          <td>
                            <div class="cintainer pt-5 pb-5">
                              <a href="/reply/editReply/<%= reply._id %>">
                                <i class="fa fa-edit fa-2x"></i
                              ></a>
                            </div>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--   Core JS Files   -->
    <%- include('../partials/core_scripts'); %>
  </body>
</html>
